doctype
html
  head
    title= content_for?(:title) ? yield(:title) : "UltimateWhip"
    = csrf_meta_tags
    script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
  body#drop-area
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar data-target=".nav-collapse" data-toggle="collapse"
          a.brand Ultimate Whip
          .nav-collapse
            ul.nav.pull-right
              li.divider-vertical
              - if current_user
                li= link_to current_user.username, garage_path(current_user.vehicles.first)
              - else
                li
                  a href="/users/sign_up" Signup
                li.divider-vertical
                li.drop.down
                  a.dropdown-toggle.log-me-in data-toggle="dropdown" href="#"
                    | Login&nbsp;
                    strong.caret
                  .dropdown-menu.login-nav
                    = render partial: "shared/login_dropdown"
    .container-fluid
      .row-fluid
        #alert-js
        = bootstrap_flash
        = yield
      footer#photo-upload
        - if current_user
          #upload-area
            =  select_tag(:vehicle_id, options_for_select(list_vehicles_by_name))
            a#pickfiles.btn.btn-primary
              i.icon-upload.icon-white
              | &nbsp; Photos
          #progress-area
        - else
          = link_to "Login to upload photos", new_user_session_path

    #the-lights