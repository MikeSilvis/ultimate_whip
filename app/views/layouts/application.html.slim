html
  head
    title= content_for?(:title) ? yield(:title) : "Auxotic: The Next Generation Car Community"
    meta content="BMW, e90, e91, e92, m3, 2008, 2009, 2010, 2011, 2012, after market, pictures, pics, photos, photography" name="keywords"
    meta content="A place to view, compare, and discuss aftermarket e9x m3s." name="description"
    meta content="Mike Silvis" name="author"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    script src="http://raw.github.com/MikeSilvis/mikes-modal-library/master/lib/mikes-modal.min.js" type="text/javascript"
    = current_user_meta_tags

  body
    img alt="BMW e92 m3" src="http://s3.amazonaws.com/ultimate_whip/garage_photos/photos/000/000/132/large/38254030019_original.jpg?1349839114" style="display:none;"
    = render partial: "shared/navbar"
    .container-fluid
      .row-fluid
        = render partial: "shared/flash", locals: { flash: flash }
        #alert-js
        = yield
